@model DogViewModel

<h1>Delete</h1>
<hr />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Delete a Dog From JSON</h5>
            </div>
            <div class="card-body">
                <form asp-controller="HelloWorld" asp-action="DeleteDog" method="post">
                    <div class="mb-3">
                        <label class="form-label">Enter Dog ID to be deleted:</label>
                        <input asp-for=Id type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">

            </div>
        </div>


    </div>
</div>